*
  box-sizing border-box

html, body
  padding 0
  mpargin 0
  
body
  font-family "adobe-garamond-pro", Garamond, YuMincho, '游明朝', serif
  font-size 14px
  letter-spacing 0.2em
  color rgba(255, 255, 255, 0.7)
  background-color #071520

button
  background none
  border none
  outline none

a
  color rgba(255, 255, 255, 0.7)
  text-decoration none
  transition opacity 0.4s
  &:hover
    opacity 0.8
    text-decoration underline

#canvas-clip
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  overflow hidden
  
canvas#main
  transform-origin left top


#page
  position absolute
  left 0
  top 0
  width 100%
  min-width 1000px
  height 100%

#loading
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center
  .circle
    width 400px
    height 400px
    display flex
    position relative
    align-items center
    justify-content center
  canvas
    position absolute
    width 400px
    height 400px
    left 0

#top
  display none
  position relative
  width 100%
  height 100%

  ul
    display flex
    list-style none
    justify-content space-between
    align-items flex-end
    align-content flex-start
    margin 12px 0 -3px -50px
  li
    padding 0 18px 0 10px
    border-width 1px
    border-color rgba(255, 255, 255, 0.7)
    border-left-style solid
    &:first-child
      border-left-style none

  .album-info
    position absolute
    width 382px
    height 100px
    left 50px
    bottom 50px
    .info
      position absolute
      left 118px
      bottom 0
      font-size 12px
      ul
        margin 12px 0 -3px -50px
      li
        background url(images/icon_blank.png) no-repeat 90% 50%

  .navi
    position absolute
    right 50px
    bottom 50px
    li
      span
        font-size 11px
  .play_label
    position absolute
    width 100%
    bottom 310px
    text-align center
  .buttons
    position absolute
    width 100%
    bottom 180px
    text-align center
    button
      margin 0 20px
      transition opacity 0.4s
      &:hover
        opacity 0.5

#about
  display none
  position absolute
  width 100%

#share
  display none
  width 100%
  height 100%
  padding 50px
  .share-inner
    display flex
    flex-wrap nowrap
    justify-content space-between
    align-items flex-end
    position relative
    width 100%
    height 100%
    padding 30px
    background url(images/h-line.png) top repeat-x, url(images/h-line.png) bottom repeat-x, url(images/v-line.png) left repeat-y, url(images/v-line.png) right repeat-y
  .share-buttons
    text-align center
    > img
      margin-bottom 10px


.overlay
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  z-index 10000
  pointer-events none

.noise
  background url(images/noise.png)
  z-index 10001
  opacity 0.6




// debug

#stats
  position absolute
  left 0
  top 0
  z-index 100

#_frame-counter
  position absolute
  left 5px
  bottom 0px
  z-index 100
  font-size 30px

#_vcon
  position absolute
  right 0
  bottom 0
  z-index 100
  border 3px solid #333
  transform-origin right bottom
  transform scale(0.3, 0.3)
  
#_tracker-canvas
  position absolute
  left 0
  top 0
  z-index 200
